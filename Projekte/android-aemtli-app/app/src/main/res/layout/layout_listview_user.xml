<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/layout_listview_benutzername"
        android:layout_width="@dimen/layout_masse_match_constraint"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/guikomponenten_margin"
        android:layout_marginLeft="@dimen/guikomponenten_margin"
        android:layout_marginStart="@dimen/guikomponenten_margin"
        android:layout_marginTop="@dimen/guikomponenten_margin"
        android:textSize="@dimen/allelernendenactivity_name_text_groesse"
        app:layout_constraintBottom_toBottomOf="@+id/layout_listview_benutzerbild"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/layout_listview_benutzerbild"
        app:layout_constraintTop_toTopOf="@+id/layout_listview_benutzerbild"
        app:layout_constraintVertical_bias="0.459" />

    <ImageView
        android:id="@+id/layout_listview_benutzerbild"
        android:layout_width="@dimen/allelernendenactivity_bild_groesse"
        android:layout_height="@dimen/allelernendenactivity_bild_groesse"
        android:layout_marginBottom="@dimen/guikomponenten_margin"
        android:layout_marginLeft="@dimen/guikomponenten_margin"
        android:layout_marginStart="@dimen/guikomponenten_margin"
        android:layout_marginTop="@dimen/guikomponenten_margin"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018"
        app:srcCompat="@mipmap/ic_launcher_round" />
</android.support.constraint.ConstraintLayout>
